@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/build/css/style.css">
    <title>Document</title>
</head>
<body>
    <section class="start-auth start-auth--login ">
        <h1 class="start-auth__title">
            MetaPotato
        </h1>
        @if (!ViewBag.isResetPassword)
        {
            <div class="start-auth__auth-block">
                @Html.Partial("/Views/Account/Login.cshtml", new MetaPotato.ViewModels.LoginModel())
                <button type="button" class="start-auth__button start-auth__register-btn button-shadow">Регистрация</button>
            </div>
            <div class="start-auth__regist-block visually-hidden">
                @Html.Partial("/Views/Account/Register.cshtml", new MetaPotato.ViewModels.RegisterModel())
                <button type="button" class="start-auth__back-btn button-shadow">Назад</button>
            </div>
            <div class="start-auth__forgot-pass-block visually-hidden">
                @Html.Partial("/Views/Account/ForgotPassword.cshtml", new MetaPotato.ViewModels.ForgotPasswordViewModel())
                <button type="button" class="start-auth__back-btn-forgot button-shadow">Назад</button>
            </div>
            <div class="start-auth__forgot-pass-block visually-hidden">
                @Html.Partial("/Views/Account/ResetPassword.cshtml", new MetaPotato.ViewModels.ResetPasswordViewModel())
                <button type="button" class="start-auth__back-btn-forgot button-shadow">Назад</button>
            </div>
        }
        else
        {
            <div class="start-auth__auth-block visually-hidden">
                @Html.Partial("/Views/Account/Login.cshtml", new MetaPotato.ViewModels.LoginModel())
                <button type="button" class="start-auth__button start-auth__register-btn button-shadow">Регистрация</button>
            </div>
            <div class="start-auth__regist-block visually-hidden">
                @Html.Partial("/Views/Account/Register.cshtml", new MetaPotato.ViewModels.RegisterModel())
                <button type="button" class="start-auth__back-btn button-shadow">Назад</button>
            </div>
            <div class="start-auth__forgot-pass-block visually-hidden">
                @Html.Partial("/Views/Account/ForgotPassword.cshtml", new MetaPotato.ViewModels.ForgotPasswordViewModel())
                <button type="button" class="start-auth__back-btn-forgot button-shadow">Назад</button>
            </div>
            <div class="start-auth__forgot-pass-block">
                @Html.Partial("/Views/Account/ResetPassword.cshtml", new MetaPotato.ViewModels.ResetPasswordViewModel())
                <button type="button" class="start-auth__back-btn-forgot button-shadow">Назад к форме входа</button>
            </div>
        }


    </section>
    <script src="~/build/auth.bundle.js"></script>
</body>
</html>
