@model MetaPotato.Controllers.ViewModelItem;

@{
    ViewBag.Title = "Добавление пользователя";
}

<form asp-action="Create" asp-controller="Crop" method="post" style='width:180px; height:160px; align-items: center;' enctype="multipart/form-data">
    <p>
        <label style="color: #fff">Имя</label>
        <input name="Name" class="form-control" />
    </p>
    <p>
        <label style="color: #fff">Аватар</label>
        <input name="Avatar" type="file" class="form-control" onchange="LoadFile()" />
    </p>
    <p>
        <input type="submit" id="loadfile" value="Добавить" />
    </p>
</form>
<h3 style="color: #fff">Все пользователи</h3>
<div style="color: #fff">
    <h4>@Model.Name</h4>
    @if (Model.Photo != null)
    { 
        <img id="dcropimage1" size=auto src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Photo))" />
        <script type="text/javascript">
            $(function () {
                $("#dcropimage1").Jcrop({
                onSelect: croparea,
                    aspectRatio: 1
                });

            });
        </script>
    }
</div>


