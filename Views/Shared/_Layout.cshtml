<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - MetaPotato</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header class="master-header master-header--close-menu">
        <div class="master-header__menu menu">
            <div class="menu__user">
                <img src="img/default_avatar.png" class="menu__avatar" />
                <span class="menu__username">@ViewBag.Username</span>
            </div>
            <ul class="menu__nav">
                <li class="menu__nav-item">
                    <svg class="menu__icon" width="19" height="20">
                        <use xlink:href="img/symbol/sprite.svg#settings"></use>
                    </svg>
                    <span>Настройки</span>
                </li>
                <li class="menu__nav-item" asp-action="logout">
                    <form asp-action="Logout" asp-controller="Account">
                        <button class="menu__logout">
                            <svg class="menu__icon" width="17" height="22">
                                <use xlink:href="img/symbol/sprite.svg#logout"></use>
                            </svg>
                            <span>Выйти</span>
                        </button>
                    </form>
                </li>
            </ul>
        </div>
        <div class="master-header__icon-wrapper">
            <svg class="master-header__icon master-header__menu-close" width="13" height="13">
                <use xlink:href="img/symbol/sprite.svg#menu-close"></use>
            </svg>
            <svg class="master-header__icon master-header__menu-open" width="17" height="14">
                <use xlink:href="img/symbol/sprite.svg#menu-btn"></use>
            </svg>
        </div>
        <h2 class="master-header__title">
            MetaPotato
        </h2>
        <div class="master-header__icon-wrapper master-header__icon-wrapper--right">
            <svg class="master-header__icon" width="15" height="16">
                <use xlink:href="img/symbol/sprite.svg#search"></use>
            </svg>
        </div>
    </header>
        <main class="master-main">
            @RenderBody()
        </main>

    <script src="~/js/slider.js"></script>
</body>
</html>
