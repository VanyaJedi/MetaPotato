@model MetaPotato.ViewModels.RegisterModel

    <form class="start-auth__register" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <input class="start-auth__input" type="text" placeholder="login" asp-for="UserName" maxlength="30"/>
        <input class="start-auth__input" type="email" placeholder="e-mail" asp-for="Email" />
        <input class="start-auth__input" type="password" placeholder="password" asp-for="Password" />
        <input class="start-auth__input start-auth__input--last" type="password" placeholder="repeat password" asp-for="ConfirmPassword" />
        <button class="start-auth__button start-auth__reg-btn button-shadow button-shadow--big">Зарегистрироваться</button>
    </form>